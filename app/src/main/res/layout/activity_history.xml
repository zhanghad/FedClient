<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg0">
    <TextView
        android:id="@+id/history_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="历史记录"
        android:textAlignment="center"
        android:textSize="30dp" />
    <FrameLayout
        android:id="@+id/main_Frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="已完成项目">
        </TextView>
    </FrameLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ListView
        android:id="@+id/history_list"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="10dp"/>

    <RadioGroup
        android:id="@+id/main_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/RB_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/renwuguanli"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="10dp"
            android:text="任务管理"/>
        <RadioButton
            android:id="@+id/RB_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/lishi"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="10dp"
            android:text="历史记录"/>
        <RadioButton
            android:id="@+id/RB_now"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/now"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="10dp"
            android:text="当前状态"/>
        <RadioButton
            android:id="@+id/RB_shezhi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/shezhi"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="10dp"
            android:text="设置"/>
        <RadioButton
            android:id="@+id/RB_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/mine"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="10dp"
            android:text="我的"/>
    </RadioGroup>

</LinearLayout>