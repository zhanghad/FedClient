<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fedclient">

    <!--必备的权限-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <!--okhttp3 的配置，使其可使用http-->


        <activity android:name="com.fed.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.fed.RegisterActivity"
            android:label="Register Activity">
            <intent-filter>
                <action android:name="com.litreily.RegisterActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.fed.HomeActivity"
            android:label="Home Activity">
            <intent-filter>
                <action android:name="com.litreily.HomeActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.fed.HistoryActivity"
            android:label="History Activity">
            <intent-filter>
                <action android:name="com.litreily.HistoryActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.fed.NowActivity"
            android:label="Now Activity">
            <intent-filter>
                <action android:name="com.litreily.NowActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.fed.ShezhiActivity"
            android:label="Shezhi Activity">
            <intent-filter>
                <action android:name="com.litreily.ShezhiActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.fed.MineActivity"
            android:label="Mine Activity">
            <intent-filter>
                <action android:name="com.litreily.MineActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!--websocket服务-->
        <service
            android:name="com.fed.websocket.WebSocketService"
            android:enabled="true"
            android:exported="true" />


    </application>
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />


</manifest>